<aside class="w-full lg:w-64 sticky top-0 bg-red-700 p-4 rounded-lg shadow-2xl overflow-y-auto mr-4 border-4 border-black flex flex-col justify-start">

  <!-- Blue Circle (Lens) -->
  <div class="flex justify-start items-center mb-4">
    <div class="w-10 h-10 bg-blue-600 border-4 border-white rounded-full shadow-lg"></div>
  </div>

  <!-- Header -->
  <h2 class="text-2xl font-bold text-white text-center font-[GameBoy1989] mb-6 tracking-wider truncate max-w-full overflow-hidden">
    Pokedex
  </h2>

  <% if user_signed_in? %>
    <p class="text-sm text-white mb-6 font-mono text-center">
      Welcome,<br>
      <strong><%= current_user.email %></strong>
    </p>
  <% end %>

  <!-- Navigation Boxes -->
  <ul class="space-y-3">
    <li>
      <a href="<%= pokemons_path %>" 
         class="block px-4 py-2 text-center rounded-md font-[GameBoy1989] font-bold text-white bg-pink-700 hover:bg-pink-600 border-2 border-black shadow">
        Home
      </a>
    </li>

    <li>
      <a href="<%= teams_teams_page_path %>" 
         class="block px-4 py-2 text-center rounded-md font-[GameBoy1989] font-bold text-white bg-blue-700 hover:bg-blue-600 border-2 border-black shadow">
        My Team
      </a>
    </li>

    <% if user_signed_in? %>
      <li>
        <%= link_to "Edit Profile", edit_user_registration_path,
                    class: "block px-4 py-2 text-center rounded-md font-[GameBoy1989] font-bold text-white bg-purple-700 hover:bg-purple-600 border-2 border-black shadow" %>
      </li>
    <% end %>

    <li>
      <div class="block text-center px-4 py-2 rounded-md bg-yellow-500 hover:bg-yellow-400 border-2 border-black shadow">
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path,
                      data: { turbo_method: :delete },
                      class: "font-bold text-black" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "font-bold text-black" %>
        <% end %>
      </div>
    </li>
  </ul>
  <!-- D-Pad design-->
  <div class="flex justify-center mt-6">
    <div class="relative w-16 h-16">
      <!-- Up -->
      <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-gray-800 rounded"></div>
      <!-- Down -->
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-gray-800 rounded"></div>
      <!-- Left -->
      <div class="absolute left-0 top-1/2 transform -translate-y-1/2 w-6 h-6 bg-gray-800 rounded"></div>
      <!-- Right -->
      <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-6 h-6 bg-gray-800 rounded"></div>
    </div>
  </div>
</aside>
