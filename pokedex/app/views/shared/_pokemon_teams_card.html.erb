<!-- All the Pokemons within our Teams Page -->
<div class="w-2xl grid grid-cols-4 gap-4 ml-6">
  <% pokemons.each do |pokemon| %>
    <%= form_with url: add_pokemon_to_team_path(@team), method: :post, data: { turbo: false }, local: true do %>
      <%= hidden_field_tag :pokemon_name, pokemon.name %>

      <button type="submit"
              class="w-full block shadow-lg rounded-lg p-4 text-center border border-gray-200 
                     transition-transform transform hover:scale-105 hover:shadow-2xl cursor-pointer <%= type_color_class(pokemon.types[0]) %>">
        
        <img src="<%= pokemon.sprite_url %>"
             alt="<%= pokemon.name %>" 
             class="w-32 h-32 object-contain mx-auto">

        <p class="text-lg font-semibold capitalize mt-2 overflow-hidden max-w-full truncate">
          <%= pokemon.name %>
        </p>

        <%= render partial: "shared/type_badges", locals: { types: pokemon[:types] } %>
      </button>
    <% end %>
  <% end %>
</div>
