<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden p-6 border border-gray-200">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-4">
    <%= @pokemon["name"].capitalize %>
  </h1>

<!-- actual sprite -->
  <div class="flex justify-center">
    <img src="<%= @pokemon['sprites']['front_default'] %>" 
         alt="<%= @pokemon['name'] %>" 
         class="w-32 h-32 object-contain">
  </div>

  <!-- height and weight -->
  <div class="mt-4">
    <p class="text-gray-600"><strong>Height:</strong> <%= @pokemon["height"] %></p>
    <p class="text-gray-600"><strong>Weight:</strong> <%= @pokemon["weight"] %></p>
  </div>

  <h2 class="text-xl font-semibold text-gray-700 mt-4">Abilities</h2>

  <!-- Abilities -->
  <ul class="mt-2 space-y-1">
    <% @pokemon["abilities"].each do |ability| %>
      <li class="bg-gray-100 text-gray-700 px-3 py-1 rounded-md inline-block">
        <%= ability["ability"]["name"].capitalize %>
      </li>
    <% end %>
  </ul>
<!-- Button to go to next pokemon -->
<div class="flex justify-center mt-6">
  <a href="<%= pokemon_path(@pokemon["id"] + 1) %>"
     class="relative flex items-center px-6 py-3 text-white font-bold 
            bg-red-500 rounded-full border-4 border-black shadow-lg 
            hover:bg-red-600 transition-transform transform hover:scale-105">
    
    <span class="absolute left-2 top-1/2 transform -translate-y-1/2 w-3 h-3 bg-white rounded-full"></span>
    
    <span class="ml-2">&rarr;</span>
  </a>
</div>